<?php if ( function_exists('has_post_thumbnail') && has_post_thumbnail() ) { 
  $feat_image = wp_get_attachment_url( get_post_thumbnail_id() ); ?>
  <div class="featured-image" style="background-image: url('<?php echo $feat_image; ?>');" >
  </div>
<?php } ?>

